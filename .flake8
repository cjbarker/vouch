[flake8]
# Flake8 configuration for Vouch project

# Maximum line length
max-line-length = 100

# Exclude directories from checking
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .venv.backup,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    htmlcov,
    uploads

# Ignore specific error codes
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (black handles this)
    E501,

# Select which errors to check
select = E,W,F

# Show source code for each error
show-source = True

# Show pep8 error code in output
show-pep8 = True

# Count errors
count = True

# Display statistics
statistics = True
